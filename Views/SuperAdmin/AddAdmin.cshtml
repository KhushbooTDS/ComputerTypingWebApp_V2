@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    .textbox {
        border-color: black;
        background-color: white;
        height: 20px;
        width: 40%;
    }

    .select {
        border-color: black;
        height: 40px;
        width: 40%;
    }
</style>

<form method="post">
    @if (TempData["ErrorMsg"] != "" && @TempData["ErrorMsg"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMsg"]
        </div>
    }
    @if (TempData["SuccessMsg"] != "" && @TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMsg"]
        </div>
    }

    <div class="row g-6">
        <div class="col-md-6">
            <div class="card">
                <h5 class="card-header">Add Admin/Principle</h5>
                <div class="card-body demo-vertical-spacing demo-only-element">
                    <label class="form-label" for="UserName">UserName</label>
                    <div class="input-group">
                        
                        <input type="text" class="form-control" name="UserName" id="UserName" required />
                    </div>
                    <label class="form-label" for="Password">Password</label>
                    <div class="input-group">
                        
                        <input type="password" class="form-control" name="Password" id="Password" required />
                    </div>
                    <label class="form-label" for="Email">Email</label>
                    <div class="input-group">
                       
                        <input type="email" class="form-control" name="Email" id="Email" required />
                    </div>
                    <label class="form-label" for="Institute">Institute</label><br />
                    <div class="input-group">
                       
                        @Html.DropDownList("Institute",ViewBag.InstituteList,"-- Select Institute--",new{ @class = "form-control"})
                    </div>
                    <input type="submit" class="btn btn-primary" value="Submit" asp-action="SaveAdmin" asp-controller="SuperAdmin" />
                </div>
            </div>
        </div>
    </div>
</form>
