@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string CurrentDashboard = HttpContextAccessor.HttpContext.Request.Query["dashId"];
    if (CurrentDashboard == "4")
    {
        Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}



<form method="post" enctype="multipart/form-data">
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="row g-6">
                <div class="col-md-6">
                    <div class="card">
                        <h5 class="card-header">Add Speed Practice</h5>
                        <div class="card-body demo-vertical-spacing demo-only-element">

                            <div class="form-group">
                                <label for="Course">Course</label>
                                @Html.DropDownList("Course",ViewBag.CourseList,"-- Select Course--",new{ @class = "form-select", @required="required"})
                            </div>
                            <div class="form-group">
                                <label for="Subject">Subject</label>
                                @Html.DropDownList("Subject",ViewBag.SubjectList,"-- Select Subject--",new{ @class = "form-select", @required="required"})
                            </div>
                            <div class="form-group">
                                <label for="Section">Section</label>
                                @Html.DropDownList("Section", ViewBag.SectionList3, "-- Select Section --", new { @class = "form-control select", @required="required" })
                            </div>
                            <div class="form-group">
                                <label for="file">Upload File</label><br />
                                <input type="file" class="form-control" name="file" required />
                            </div>
                            <br /><br />

                            <input type="submit" class="btn btn-primary" value="Submit" asp-action="SaveSpeedPractice" asp-controller="Admin" />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
