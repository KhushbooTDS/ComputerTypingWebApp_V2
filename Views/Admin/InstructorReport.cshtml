@model List<InstructorVM>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string CurrentDashboard = HttpContextAccessor.HttpContext.Request.Query["dashId"];
    if (CurrentDashboard == "4")
    {
        Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}
@{
    ViewData["Title"] = "InstructorReport";
}

<p class="h3">Instructor Report</p>
<input class="btn-info" type="button" value="Add Instructor" onclick="location.href='@Url.Action("AddInstructor","Admin",new{dashId = 4})'" />
<hr />
<div class="container">
    <div class="card">
        <h5 class="card-header">Instructor Report</h5>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered">
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Mobile No
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                    @foreach (var items in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => items.InstructorFirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => items.MobileNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => items.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => items.Status)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
